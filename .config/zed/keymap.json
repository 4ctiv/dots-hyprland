[
  {
    "context": "", // Always active
    "bindings": {
      "alt-p": "command_palette::Toggle",
      "alt-,": "workspace::ToggleLeftDock",
      "alt-.": "workspace::ToggleBottomDock",
      "alt--": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      // "project_open": "editor::OpenFile 'README.md'"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-f": "project_panel::NewSearchInDirectory",
      "f1": "editor::GoToTypeDefinitionSplit",
      "f2": "editor::GoToDefinitionSplit",
      "f12": "editor::GoToDefinition",
      "shift-f12": "pane::GoBack"
    }
  },
  {
    "context": "Terminal",
    "bindings": {}
  }
]
