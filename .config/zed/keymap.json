// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
//
// Special keys: `secindary-` (ctrl),`super-`,`alt-`,`shift-`,`fn-`
[
  {
    "context": "", // Always active
    "bindings": {
      "alt-p": "command_palette::Toggle",
      "alt-,": "workspace::ToggleLeftDock",
      "alt-.": "workspace::ToggleBottomDock",
      "alt--": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      // "project_open": "editor::OpenFile 'README.md'"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "f1": "editor::GoToDeclarationSplit",
      "f2": "editor::GoToDefinitionSplit",
      "shift-f2": "pane::GoBack",
      "f3": "editor::GoToTypeDefinitionSplit",
      "f4": "editor::FindAllReferences",
      "f5": "editor::Format",
      "f6": "editor::Rename",
      "f9": "repl::Run",
      "f10": "debugger::Start",
      "shift-f10": "debugger::Restart",
      "f11": "debugger::Pause",
      "shift-f11": "debugger::Stop",
      "f12": "debugger::ToggleIgnoreBreakpoints",
      "ctrl-f": "vim::Search",
      "ctrl-shift-f": "project_panel::NewSearchInDirectory",
      "ctrl-p": "command_palette::Toggle",
      "alt-v": "workspace::ToggleVimMode",
      "alt-space": "assistant::InlineAssist"
    }
  },
  {
    "context": "Terminal",
    "bindings": {}
  }
]
